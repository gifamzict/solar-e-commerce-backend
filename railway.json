{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "composer install --optimize-autoloader --no-dev"
    },
    "deploy": {
        "startCommand": "php -S 0.0.0.0:$PORT -t public",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}